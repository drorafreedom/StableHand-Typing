{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "noEmit": true,

    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "types": ["vite/client"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/vite-env.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/unused/**",
    "src/**/not_used/**",
    "src/**/not used/**",
    "src/**/* copy.ts",
    "src/**/* copy.tsx",
    "src/**/*copy.ts",
    "src/**/*copy.tsx"
  ]
}


 