{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,//adding to supress build errors
    "strictNullChecks" :false // adding to supress build errors 
  },
  "include": ["src"],

  // explicitly ignore the broken copies and test folders
  "exclude": [
    "node_modules",
    "src/components/Therapy/unused",
    "src/components/Therapy/**/*copy.tsx",
    "src/components/***/**/* copy.tsx",
    "src/utils/unused",
    "src/stylesNotUsed",
    "src/firebase/unused",
    "src/components/atoms/not used",
    "src/components/common/unused",
    "src/components/organisms/unused/"
  ]
  
}
