{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],

  // explicitly ignore the broken copies and test folders
  "exclude": [
    "node_modules",
    "src/components/Therapy/Thearpy_not_used",
    "src/components/Therapy/**/*copy.tsx",
    "src/utils/validation copy.ts"
  ]
}
